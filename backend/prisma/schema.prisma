generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  DOCTOR
  HOSPITAL
}

enum AccessStatus {
  PENDING
  APPROVED
  REVOKED
  EXPIRED
}

model User {
  id              String   @id @default(uuid())
  name            String
  phone           String   @unique
  healthUid       String   @unique
  role            Role     @default(PATIENT)
  createdAt       DateTime @default(now())
  
  // Profile fields
  bloodGroup       String?
  allergies        String?
  emergencyContact String?  // Name of emergency contact
  emergencyPhone   String?  // Phone number of emergency contact
  dateOfBirth     String?
  gender          String?
  address         String?

  accessRequests  AccessRequest[]
  EmergencyAccess EmergencyAccess[]
  medicalRecords MedicalRecord[]
  reminders       Reminder[]
}

model Otp {
  id        String   @id @default(uuid())
  phone     String
  otp       String
  purpose   String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([phone])
}

model Hospital {
  id           String  @id @default(uuid())
  name         String
  location     String
  hospitalUid  String? @unique
  adminName    String?
  phone        String? @unique
  email        String? @unique
  passwordHash String?

  doctors Doctor[]

  // üîÅ OPPOSITE RELATION
  emergencyAccesses EmergencyAccess[]

  createdAt DateTime @default(now())
}

model Doctor {
  id         String @id @default(uuid())
  name       String
  phone      String @unique
  doctorUid  String @unique
  hospitalId String
  specialization String?
  passwordHash   String?

  hospital Hospital @relation(fields: [hospitalId], references: [id])

  // üîÅ OPPOSITE RELATIONS (REQUIRED)
  accessRequests  AccessRequest[]
  emergencyAccess EmergencyAccess[]
  medicalRecords MedicalRecord[]
  reminders      Reminder[]

  createdAt DateTime @default(now())
}

model AccessRequest {
  id        String       @id @default(uuid())
  doctorId  String
  patientId String
  status    AccessStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime     @default(now())

  doctor  Doctor @relation(fields: [doctorId], references: [id])
  patient User   @relation(fields: [patientId], references: [id])
}

model EmergencyAccess {
  id         String @id @default(uuid())
  doctorId   String
  patientId  String
  hospitalId String

  reason String
  status EmergencyStatus @default(ACTIVE)

  startedAt DateTime  @default(now())
  expiresAt DateTime
  revokedAt DateTime?

  doctor   Doctor   @relation(fields: [doctorId], references: [id])
  patient  User     @relation(fields: [patientId], references: [id])
  hospital Hospital @relation(fields: [hospitalId], references: [id])

  @@index([doctorId])
  @@index([patientId])
  @@index([hospitalId])
}

enum EmergencyStatus {
  ACTIVE
  REVOKED
  EXPIRED
}

model AuditLog {
  id        String   @id @default(uuid())
  actorRole String
  actorId   String
  action    String
  targetId  String?
  createdAt DateTime @default(now())
}

// Medical Records - Doctor adds diagnosis, medications, etc.
model MedicalRecord {
  id          String   @id @default(uuid())
  patientId   String
  doctorId    String
  diagnosis   String
  symptoms    String?
  medications String   // JSON string or comma separated
  notes       String?
  followUpDate String? // When to come for checkup
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  patient User   @relation(fields: [patientId], references: [id])
  doctor  Doctor @relation(fields: [doctorId], references: [id])

  @@index([patientId])
  @@index([doctorId])
}

// Reminders for follow-up checkups
model Reminder {
  id          String        @id @default(uuid())
  patientId   String
  doctorId    String
  message     String
  checkupDate DateTime
  status      ReminderStatus @default(PENDING)
  createdAt   DateTime      @default(now())

  patient User @relation(fields: [patientId], references: [id])
  doctor  Doctor @relation(fields: [doctorId], references: [id])

  @@index([patientId])
}

enum ReminderStatus {
  PENDING
  SENT
  COMPLETED
  EXPIRED
}
